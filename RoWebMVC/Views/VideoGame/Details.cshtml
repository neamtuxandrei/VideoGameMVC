@model VideoGame

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@Model.Title</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" disabled />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Category" class="form-control border-0 shadow" disabled />
                    <label asp-for="Category" class="ms-2"></label>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="YearReleased" class="form-control border-0 shadow" disabled />
                    <label asp-for="YearReleased" class="ms-2"></label>
                    <span asp-validation-for="YearReleased" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Company" class="form-control border-0 shadow" disabled />
                    <label asp-for="Company" class="ms-2"></label>
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>

</div>
<div class="pt-3">
    <a asp-controller="VideoGame" asp-action="Index" class="btn btn-secondary btn-block ">
        Back To Game List
    </a>
</div>


<div class="pt-4 pb-2 lead"><strong>Reviews</strong></div>
<table class="table table-bordered table-striped">

    <thead>

        <tr>
            <td><strong>Username</strong></td>
            <td><strong>Date created</strong></td>
            <td><strong>Review</strong></td>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Reviews)
        {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Date</td>
                    <td>@item.Description</td>
                </tr>
        }
    </tbody>
</table>

<div class="card-body p-4">
    <form method="post" asp-action="AddReview" asp-controller="VideoGame" asp-route-gameID="@Model.Id">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            @await Html.PartialAsync("_Review", new Review())
        </div>
    </form>
</div>
