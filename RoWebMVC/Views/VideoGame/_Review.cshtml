@model Review;


    <form method="post">
        <input type="hidden" asp-for="Id" />
        <div class="border p-3 mt-4">
            <div class="lead"><strong>Add Review</strong></div>
            <div class="form-floating py-2 col-12">
                <input class="form-control border-0 shadow" asp-for="UserName" />
                <label asp-for="UserName" class="ms-2"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input class="form-control border-0 shadow" asp-for="Description" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" value="Add Review" class="btn btn-primary mt-4" />
    </form>
